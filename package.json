{
  "name": "munaqqib",
  "version": "0.1.0",
  "description": "An ElasticSearch-based crawler for crawling RESTful services and make their results searchable",
  "main": "./dist/bundle.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafidka/Munaqqib.git"
  },
  "keywords": [
    "ElasticSearch",
    "RESTful",
    "REST",
    "Search",
    "Munaqqib"
  ],
  "author": "Rafid K. Al-Humaimidi",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/rafidka/Munaqqib/issues"
  },
  "homepage": "https://github.com/rafidka/Munaqqib#readme",
  "scripts": {
    "copy-assets": "ts-node copy-assets.ts",
    "delete-dist": "ts-node delete-dist.ts",
    "watch-client": "webpack --config webpack.client.ts --watch",
    "build-client": "webpack --config webpack.client.ts",
    "build-server": "webpack --config webpack.server.ts",
    "build": "npm run delete-dist && npm run build-server && npm run build-client && npm run copy-assets",
    "start-server": "ts-node-dev --respawn --transpileOnly src/server/server.ts",
    "start-daemon": "ts-node $NODE_DEBUG_OPTION --respawn --transpileOnly src/daemon/daemon.ts",
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript (Client),Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-client\" \"npm run start-server\"",
    "test": "jest --coverage --verbose --runInBand",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "elasticsearch": "^15.1.1",
    "koa": "^2.5.2",
    "koa-mount": "^3.0.0",
    "koa-route": "^3.2.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.10",
    "node-fetch": "^2.2.0",
    "pug": "^2.0.3",
    "request": "^2.88.0",
    "sequelize": "^4.38.0",
    "sqlite3": "^4.0.2"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/elasticsearch": "^5.0.26",
    "@types/jest": "^23.3.1",
    "@types/koa": "^2.0.46",
    "@types/koa-mount": "^3.0.1",
    "@types/koa-route": "^3.2.4",
    "@types/koa-static": "^4.0.0",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.9.2",
    "@types/node-fetch": "^2.1.2",
    "@types/pug": "^2.0.4",
    "@types/request": "^2.47.1",
    "@types/sequelize": "^4.27.25",
    "@types/shelljs": "^0.8.0",
    "@types/source-map-support": "^0.4.1",
    "@types/supertest": "^2.0.5",
    "@types/webpack": "^4.4.11",
    "@types/webpack-node-externals": "^1.6.3",
    "concurrently": "^4.0.1",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "shelljs": "^0.8.2",
    "source-map-support": "^0.5.9",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.26",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  }
}
